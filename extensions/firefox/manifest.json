{
  "manifest_version": 2,
  "name": "Bookmark Manager Extension",
  "version": "1.0.0",
  "description": "Manage your bookmarks, tags, categories, and notes",
  "permissions": ["storage", "bookmarks", "tabs", "http://localhost:3000/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bookmark-manager@example.com",
      "strict_min_version": "109.0"
    }
  }
}
