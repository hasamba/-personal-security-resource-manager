{
  "manifest_version": 3,
  "name": "Bookmark Manager",
  "version": "1.0.0",
  "description": "Save bookmarks with tags, notes, and code snippets to your desktop app",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "alarms",
    "nativeMessaging"
  ],
  "host_permissions": [
    "http://localhost:8765/*"
  ],
  "action": {
    "default_popup": "../shared/html/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Save Bookmark"
  },
  "background": {
    "service_worker": "../shared/js/background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
